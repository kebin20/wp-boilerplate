{
  // Editor
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.tabSize": 2,

  // ESLint
  "eslint.options": {
    "useEslintrc": false,
    "parser": "babel-eslint",
    "parserOptions": {
      "sourceType": "module",
      "allowImportExportEverywhere": true
    },
    "env": {
      "es6": true
    }
  },

  "markdown.styles": [".vscode/markdown.css"] // Force Github styles
}
